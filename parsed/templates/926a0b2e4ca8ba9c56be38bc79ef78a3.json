{"components/products/options/product-list":"<script type=\"text/javascript\">\n//console.log(({{values.length}}));\nfunction removeOption(id){\n    console.log(\"id: \", id);\n    document.getElementById(`attribute_0_${id}`).click();\n}\n</script>\n\n<div class=\"form-field\" data-product-attribute=\"product-list\" data-step-name=\"{{display_name}}\">\n    <div style=\"display: none;\">\n        <label class=\"form-label form-label--alternate form-label--inlineSmall\">\n            {{display_name}}:\n            <span data-option-value></span>\n\n            {{#if required}}\n                <small>{{lang 'common.required'}}</small>\n            {{/if}}\n        </label>\n    </div>\n\n    {{#if values.0.image}}\n        <ul class=\"productOptions-list\">\n            {{#unless required}}\n            <div style=\"display: none;\">\n                <li class=\"productOptions-list-item\">\n                    <input class=\"form-radio\"\n                           type=\"radio\"\n                           name=\"attribute[{{id}}]\"\n                           value=\"0\"\n                           id=\"attribute_0_{{id}}\"\n                           checked=\"{{#if defaultValue '==' 0}}checked{{/if}}\" required>\n                    <label class=\"form-label\" for=\"attribute_0_{{id}}\">{{lang 'products.none'}}</label>\n                </li>\n            </div>\n            {{/unless}}\n            {{#each values}}\n                <li class=\"productOptions-list-item\" data-product-attribute-value=\"{{id}}\">\n                    {{#if image}}\n                        <figure class=\"productOptions-list-item-figure\">\n                            <img class=\"productOptions-list-item-image lazyload\" data-sizes=\"auto\" src=\"{{cdn 'img/loading.svg'}}\" data-src=\"{{getImage image 'productthumb_size'}}\" alt=\"{{image.alt}}\" title=\"{{image.alt}}\">\n                        </figure>\n                    {{/if}}\n                    <div class=\"productOptions-list-item-content\">\n                        <input\n                            class=\"form-radio\"\n                            type=\"radio\"\n                            name=\"attribute[{{../id}}]\"\n                            value=\"{{id}}\"\n                            id=\"attribute_{{id}}\"\n                            {{#if selected}}checked{{/if}}\n                            {{#if ../required}}required{{/if}}>\n                        <label data-product-attribute-value=\"{{id}}\" class=\"form-label\" for=\"attribute_{{id}}\">{{label}}\n                            </br>\n                            <span id=\"price_{{data}}\"></span>\n                        </label>\n                        <a href=\"#\" class=\"button\" onclick=\"removeOption({{../id}})\">Remove</a>\n                        <span class=\"show_hide_btn closed-details\" id=\"btn_option_details_{{data}}\"><a href=\"#\" class=\"button\">Show Details</a></span>\n                    </div>\n                </li>\n            {{/each}}\n        </ul>\n    {{else}}\n        {{#unless required}}\n        <div style=\"display: none;\">\n            <input class=\"form-radio\"\n                   type=\"radio\"\n                   name=\"attribute[{{id}}]\"\n                   value=\"0\"\n                   id=\"attribute_0_{{id}}\"\n                   {{#if defaultValue '==' 0}}checked{{/if}}>\n            <label class=\"form-label\" for=\"attribute_0_{{id}}\">{{lang 'products.none'}}</label>\n        </div>\n        {{/unless}}\n        {{#each values}}\n            <input\n                class=\"form-radio\"\n                type=\"radio\"\n                name=\"attribute[{{../id}}]\"\n                value=\"{{id}}\"\n                id=\"attribute_{{id}}\"\n                {{#if selected}}checked{{/if}}\n                {{#if ../required}}required{{/if}}>\n            <label data-product-attribute-value=\"{{id}}\" class=\"form-label\" for=\"attribute_{{id}}\">{{label}}\n                </br>\n                <span id=\"price_{{data}}\"></span>\n            </label>\n            <a href=\"#\" class=\"button\" onclick=\"removeOption({{../id}})\">Remove</a>\n            <span class=\"show_hide_btn closed-details\" id=\"btn_option_details_{{data}}\"><a href=\"#\" class=\"button\">Show Details</a></span>\n        {{/each}}\n    {{/if}}\n</div>\n"}
